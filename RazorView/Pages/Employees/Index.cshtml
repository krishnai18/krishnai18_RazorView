@page
@model RazorWebPageApp.Pages.Employees.IndexModel
@{
}
<h2>Employee</h2>

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Department</td>
            <td>
                <a asp-page="/Employees/Details" asp-route-ID="@item.Id" class="btn btn-info m-1">View</a>
                <a asp-page="/Employees/Edit" asp-route-ID="@item.Id" class="btn btn-warning m-1">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-ID="@item.Id" class="btn btn-danger m-1">Delete</a>
            </td>

        </tr>
    }
</table>